// Baseline config for all tsc-built packages
// Your package tsconfig should extend from this one
{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "types"],
    "baseUrl": "./packages",
    "moduleResolution": "node",
    "paths": {
      "@nteract/*": ["./*/src"],
      "@mybinder/*": ["./*/src"],
      "rx-jupyter": ["./rx-jupyter/src"],
      "rx-binder": ["./rx-binder/src"],
      "enchannel-zmq-backend": ["./enchannel-zmq-backend/src"],
      "fs-observable": ["./fs-observable/src"]
    }
  }
}
